<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wholebackground"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toplayout"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/home_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/home" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:text="WebVideo"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/videoandtimebackground"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/videoId_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/videoID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text=" Video ID : "
                android:textColor="#000000"
                android:typeface="serif" />

            <EditText
                android:id="@+id/videoID_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/edittext"
                android:gravity="fill"
                android:hint="Enter Video id here"
                android:padding="5dp"
                android:text="RRzUJSLev1E"
                android:textColor="#000000"
                android:typeface="serif" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/videoTime_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/videoStartTime_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="  Start Time "
                android:textColor="#000000"
                android:typeface="serif" />

            <EditText
                android:id="@+id/videoStartTime_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/timeedittext"
                android:gravity="center_vertical|fill_horizontal"
                android:inputType="number"
                android:padding="5dp"
                android:text="10"
                android:textColor="#000000"
                android:typeface="serif" >
            </EditText>

            <TextView
                android:id="@+id/videoEndTime_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text=" End Time "
                android:textColor="#000000"
                android:typeface="serif" />

            <EditText
                android:id="@+id/videoEndTime_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/timeedittext"
                android:gravity="center_vertical|fill_horizontal"
                android:inputType="number"
                android:padding="5dp"
                android:text="50"
                android:textColor="#000000"
                android:typeface="serif" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/videoplay_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/videoPlay_BT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/play"
            android:textColor="#000000"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/videoWebView_LL"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <WebView
            android:id="@+id/webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>